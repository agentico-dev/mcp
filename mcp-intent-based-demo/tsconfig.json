{
  "compilerOptions": {
    "target": "es2018",
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": ["src/**/*", "server.yaml"],
  "exclude": ["node_modules", "build/**/*", "dist/**/*", "coverage/**/*", "**/*.test.ts", "**/*.spec.ts"]
}